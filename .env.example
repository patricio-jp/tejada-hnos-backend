# Example environment variables for tejada-hnos-backend
# Rename this file to .env and change the values for your environment

# Node environment
NODE_ENV=development

# Application port
PORT=3000

# JWT signing secret
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# JWT token expiration times
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=12h

# Database (PostgreSQL)
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/tejada_hnos
# If POSTGRES_URL is defined, the following individual settings will be ignored
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=tejada_hnos
# Optional SSL settings for PostgreSQL
#POSTGRES_SSL=true
#POSTGRES_SSL_REJECT_UNAUTHORIZED=false
#POSTGRES_SSL_CA=path_or_pem_content_here

# Seed data
SEED_ADMIN_EMAIL=admin@nogalware.com
SEED_ADMIN_NAME=Admin
SEED_ADMIN_LASTNAME=User
SEED_ADMIN_PASSWORD=password
